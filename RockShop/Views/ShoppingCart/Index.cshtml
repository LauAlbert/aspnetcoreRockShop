@model ShoppingCartViewModel

<br />
<div class="container">
    <h2>Your shopping cart</h2>
    <h4></h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Item Name</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@line.Amount</td>
                    <td class="text-left">@line.Rock.Name</td>
                    <td class="text-right">@line.Rock.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Amount * line.Rock.Price).ToString("c"))
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="float-right">
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Proceed To Checkout</a>
    </div>
</div>